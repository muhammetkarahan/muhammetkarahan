import java.util.Scanner;
public class ThirdProgram {
    public static void main(String[] args) {
        int a,b,c,u;
        double alan;

        Scanner inp = new Scanner(System.in);

        System.out.println("Lutfen a sayisini giriniz");
        a = inp.nextInt();
        System.out.println("a sayisi : "+a);

        System.out.println("Lutfen b sayisini giriniz");
        b = inp.nextInt();
        System.out.println("b sayisi : "+b);

        System.out.println("Lutfen c sayisini giriniz");
        c = inp.nextInt();
        System.out.println("c sayisi : "+c);

        u = (a+b+c)/2;
        alan = Math.sqrt(u*(u-a)*(u-b)*(u-c));
        System.out.println("Ucgenin alani :"+alan);





    }
}
